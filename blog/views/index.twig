{% extends "layout.twig" %}

{% block content %}

{% for blogPost in blogPosts %}
	<div class="blog-post">
		<h2><a href="{{ 'detail/' | url }}{{ blogPost.id }}">{{ blogPost.title }}</a></h2>
		<p>Jan 1, 2020 by <a href="">Walter</a></p>
		{% if blogPost.img_url %}
			<div class="blog-post-image">
				<img src="{{ blogPost.img_url }}" alt="">
			</div>
		{% endif %}	
		<div class="blog-post-content">
			{{ blogPost.content }}
		</div>
	</div>
	<br>
{% endfor %}

{% endblock %}