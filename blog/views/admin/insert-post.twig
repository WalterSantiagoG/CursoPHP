{% extends "layout.twig" %}

{% block content %}

<h2>New Post</h2>
<p>
	<a class="btn btn-default" href="{{ 'admin/posts' | url }}">Back</a>
</p>
{% if errors %}
	<div class="alert alert-danger">
		<ul>
			{% for input, messages in errors %}
				{% for message in messages %}
					<li>{{ input }}: {{ message }}</li>
				{% endfor %}
			{% endfor %}
		</ul>
	</div>
{% endif %}
{% if result %}
	<div class="alert alert-success">Post Saved!</div>
{% endif %}
<form method="POST">
	<div class="form-group">
		<label for="inputTitle">Title</label>
		<input class="form-control" type="text" name="title" id="inpuTitle">
	</div>
		
	<textarea class="form-control" name="content" id="inputContent" rows="5"></textarea>
	<br>
	<input class="btn btn-primary" type="submit" value="Save">
	
</form>

{% endblock %}